# Production Environment Configuration for Hybrid Chatbot System

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_TITLE=Hybrid Chatbot API
API_VERSION=1.0.0

# Database Configuration
DATABASE_URL=postgresql+asyncpg://chatbot:password123@postgres:5432/chatbot_db
DATABASE_POOL_SIZE=20
DATABASE_POOL_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PREFIX=chatbot:

# Authentication
SECRET_KEY=your-super-secret-key-change-in-production-please
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# JWT Configuration
JWT_ISSUER=hybrid-chatbot
JWT_AUDIENCE=hybrid-chatbot-users

# Vector Database
LANCEDB_URI=/data/vector_storage

# Workers Configuration
WORKER_HOST=0.0.0.0
WORKER_PORT=8002
WORKER_HEARTBEAT_INTERVAL=30
WORKER_TIMEOUT=60

# Encryption
ENCRYPTION_KEY=32_character_base64_encoded_key_here
TUNNEL_TIMEOUT=300

# Frontend
FRONTEND_URL=https://your-frontend-domain.com

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=/logs/app.log
ERROR_LOG_FILE=/logs/error.log

# Security
CORS_ORIGINS=["https://your-frontend-domain.com", "https://api.your-domain.com"]
ALLOWED_HOSTS=["your-domain.com", "api.your-domain.com"]

# ML Configuration
TENSORRT_ENGINE_PATH=/engines/
MODEL_CACHE_DIR=/models/
MAX_CONTEXT_LENGTH=4096
MAX_GENERATION_LENGTH=1024

# Performance
WORKERS_COUNT=8
CONCURRENT_REQUESTS=200

# Monitoring and Health
HEALTH_CHECK_INTERVAL=30
METRICS_ENABLED=true