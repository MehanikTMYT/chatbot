# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_TITLE=Hybrid Chatbot API
API_VERSION=0.1.0

# Database Configuration
DATABASE_URL=mysql+pymysql://chatbot:password123@localhost:3306/chatbot_db
DATABASE_POOL_SIZE=20
DATABASE_POOL_OVERFLOW=10

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PREFIX=chatbot:

# Authentication
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# JWT Configuration
JWT_ISSUER=hybrid-chatbot
JWT_AUDIENCE=hybrid-chatbot-users

# Vector Database
LANCEDB_URI=./vector_storage

# Workers Configuration
WORKER_HOST=0.0.0.0
WORKER_PORT=8002
WORKER_HEARTBEAT_INTERVAL=30
WORKER_TIMEOUT=60

# Encryption
ENCRYPTION_KEY=32_character_base64_encoded_key_here
TUNNEL_TIMEOUT=300

# Frontend
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Security
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
ALLOWED_HOSTS=["*"]

# ML Configuration
TENSORRT_ENGINE_PATH=./engines/
MODEL_CACHE_DIR=./models/
MAX_CONTEXT_LENGTH=4096
MAX_GENERATION_LENGTH=1024

# Performance
WORKERS_COUNT=4
CONCURRENT_REQUESTS=100